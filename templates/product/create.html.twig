{% extends 'base.html.twig' %}

{% block title %}Add Product{% endblock %}

{% block body %}
<div class="container">
    <h2 class="mt-5 mb-5 text-center text-primary">ADD PRODUCT</h2>
    {{ form_start (form) }}
        <div class="form-group">
            <h6 class="text-primary">Name</h6>
            {{ form_widget (form.Name, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group mt-2">
            <h6 class="text-primary">Description</h6>
            {{ form_widget (form.Description, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group mt-2">
            <h6 class="text-primary">Brand</h6>
            {{ form_widget (form.Brand, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group mt-2">
            <h6 class="text-primary">Price</h6>
            {{ form_widget (form.Price, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group mt-2">
            <h6 class="text-primary">Year</h6>
            {{ form_widget (form.Year, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group mt-2">
            <h6 class="text-primary">Stock</h6>
            {{ form_widget (form.Stock, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group mt-2">
            <h6 class="text-primary">Image</h6>
            {{ form_widget (form.ImageUpload, {'attr' : {'class' : 'form-control'}, 'required': 'required'}) }}
        </div>
        <div class="form-group text-center mt-5">
            <button type="submit" class="btn btn-success mt-2">Add</button>
        </div>
    {{ form_end (form) }}
    <div class="col-md-12 text-center">
        <a href="{{ asset('manager/product') }}" class="btn btn-secondary" role="button">Back</a>
    </div>
</div>
{% endblock %}
